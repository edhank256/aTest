        <Button Content="0" HorizontalAlignment="Left" Margin="33,291,0,0" VerticalAlignment="Top" Width="181" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.ColumnSpan="2"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="39,119,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="39,162,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button x:Name="bt5" Content="5" HorizontalAlignment="Left" Margin="39,205,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
