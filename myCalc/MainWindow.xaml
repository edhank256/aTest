        <Button Content="." HorizontalAlignment="Left" Margin="145,291,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="145,162,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="145,205,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button Content="3" HorizontalAlignment="Left" Margin="145,248,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button Content="C" HorizontalAlignment="Left" Margin="248,205,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="248,248,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="77" Grid.Column="1"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="248,119,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-0.412,-0.962" Height="34" Grid.Column="1"/>
        <Menu VerticalAlignment="Top" Height="22" Grid.ColumnSpan="2">
            <MenuItem Header="檔案(_F)" Margin="0" Click="MenuItem_Click" Width="51" Height="22">
