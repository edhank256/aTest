            </MenuItem>
            <MenuItem Header="說明(_H)" Margin="0" Click="MenuItem_Click" Width="51" Height="22">
                <MenuItem Header="關於(_A)" Click="MenuItem_Click_3"/>
            </MenuItem>
        </Menu>


    </Grid>
